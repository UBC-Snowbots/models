<?xml version='1.0'?>
<sdf version='1.4'>
  <model name="Snowbots">
   <static>false</static>
	<link name='chassis'>
	    <pose>0 0 1 0 0 0</pose>

	    <collision name='collision'>
	      <geometry>
		<box>
		  <size>2.8 2.5 1.5</size>
		</box>
	      </geometry>
	    </collision>

	    <visual name='visual'>
	      <geometry>
		<box>
		  <size>2.8 2.5 1.5</size>
		</box>
	      </geometry>
	    </visual>

          <collision name='caster_collision'>
            <pose>-1.02 0 -0.75 0 0 0</pose>
            <geometry>
                <sphere>
                <radius>.25</radius>
              </sphere>
            </geometry>

            <surface>
              <friction>
                <ode>
                  <mu>0</mu>
                  <mu2>0</mu2>
                  <slip1>1.0</slip1>
                  <slip2>1.0</slip2>
                </ode>
              </friction>
            </surface>
          </collision>

          <visual name='caster_visual'>
            <pose>-1.02 0 -0.75 0 0 0</pose>
            <geometry>
              <sphere>
                <radius>.25</radius>
              </sphere>
            </geometry>
          </visual>
  	</link>
      <link name="left_wheel">
        <pose>0.5 1.35 0.5 0 1.5707 1.5707</pose>
        <collision name="collision">
          <geometry>
            <cylinder>
              <radius>.5</radius>
              <length>.2</length>
            </cylinder>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <cylinder>
              <radius>.5</radius>
              <length>.2</length>
            </cylinder>
          </geometry>
        </visual>
      </link>
      <link name="right_wheel">
        <pose>0.5 -1.35 0.5 0 1.5707 1.5707</pose>
        <collision name="collision">
          <geometry>
            <cylinder>
              <radius>.5</radius>
              <length>.2</length>
            </cylinder>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <cylinder>
              <radius>.5</radius>
              <length>.2</length>
            </cylinder>
          </geometry>
        </visual>
      </link>
      <joint type="revolute" name="left_wheel_hinge">
        <pose>0 0 -0.15 0 0 0</pose>
        <child>left_wheel</child>
        <parent>chassis</parent>
        <axis>
          <xyz>0 1 0</xyz>
        </axis>
      </joint>

      <joint type="revolute" name="right_wheel_hinge">
        <pose>0 0 0.15 0 0 0</pose>
        <child>right_wheel</child>
        <parent>chassis</parent>
        <axis>
          <xyz>0 1 0</xyz>
        </axis>
      </joint>

    <include>
      <uri>model://hokuyo</uri>
      <pose>-1 0.5 1.75 0 0 0</pose>
    </include>
    <joint name="hokuyo_joint" type="revolute">
      <child>hokuyo::link</child>
      <parent>chassis</parent>
      <axis>
	<xyz>0 0 1</xyz>
	<limit>
	  <upper>0</upper>
	  <lower>0</lower>
	</limit>
      </axis>
    </joint>

    <include>
      <uri>model://camera</uri>
      <pose>-1 -0.5 1.75 0 0 0</pose>
    </include>
    <joint name="camera_joint" type="revolute">
      <child>camera::link</child>
      <parent>chassis</parent>
      <axis>
	<xyz>0 0 0</xyz>
	<limit>
	  <upper>0</upper>
	  <lower>0</lower>
	</limit>
      </axis>
    </joint>
  </model>
</sdf>
